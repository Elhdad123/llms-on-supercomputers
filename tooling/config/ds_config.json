{ 
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.00015,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "none",
      "pin_memory": true
    },
    "contiguous_gradients": true,
    "overlap_comm": true,
    "allgather_partitions": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 200000000,
    "allgather_bucket_size": 200000000
  },
  "steps_per_print": 100,
  "train_batch_size": 320,
  "train_micro_batch_size_per_gpu": 80,
  "gradient_accumulation_steps": 1,
  "wall_clock_breakdown": false
}
